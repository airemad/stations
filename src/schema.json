{
    "title": "stations",
    "description": "Schema for airemad stations",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "description": "Original station Id",
                "type": "string"
            },
            "uiid": {
                "description": "Unique station Id (generated by airemad)",
                "type": "string",
                "format": "uuid"
            },
            "name": {
                "description": "Station name",
                "type": "string"
            },
            "altitude": {
                "description": "Station altitude",
                "type": "number"
            },
            "coordinates": {
                "type": "object",
                "properties": {
                    "ed50": {
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": {
                            "type": "number"
                        }
                    },
                    "wgs84": {
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": {
                            "type": "number"
                        }
                    }
                },
                "required": [
                    "ed50",
                    "wgs84"
                ]
            },
            "additionDate": {
                "description": "Station date when was added to the City",
                "type": "string",
                "format": "date"
            },
            "isActive": {
                "description": "Station status",
                "type": "boolean"
            },
            "isAcustic": {
                "description": "Station recoding acustic data",
                "type": "boolean"
            },
            "acusticAvailableValues": {
                "type": "array",
                "minItems": 0,
                "maxItems": 6,
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "id",
            "uuid",
            "name",
            "altitude",
            "coordinates",
            "additionDate",
            "isActive",
            "isAcustic",
            "acusticAvailableValues"
        ]
    }
}